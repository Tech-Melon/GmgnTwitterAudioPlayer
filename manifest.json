{
    "manifest_version": 3,
    "name": "Gmgn Twitter Audio Player",
    "version": "1.0.2",
    "description": "实时监控 GMGN 订阅用户的twitter ，高度可定制的音频播报插件",
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/icon16.png",
            "48": "images/icon48.png",
            "128": "images/icon128.png"
        }
    },
    "permissions": ["storage", "unlimitedStorage"],
    "host_permissions": ["*://*.gmgn.ai/*", "*://gmgn.ai/*"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["*://*.gmgn.ai/*", "*://gmgn.ai/*"],
            "js": ["content.js"],
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "inject.js",
                "sounds/default.MP3",
                "sounds/preset1.MP3",
                "sounds/elonmusk.MP3",
                "sounds/cz.MP3",
                "sounds/heyi.MP3"
            ],
            "matches": ["*://*.gmgn.ai/*", "*://gmgn.ai/*"]
        }
    ]
}
